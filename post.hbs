                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
</main>

{{#get "posts" limit="3" include="tags,authors" filter="id:-{{id}}+primary_tag:{{primary_tag.slug}}"}}
    {{#if posts}}
        <div class="related-posts">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-xl-10 ml-auto mr-auto">
                        <h3>{{t "Related articles"}}</h3>
                        <div class="loop">
                            {{#foreach posts}}
                                {{> "loop"}}
                            {{/foreach}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
{{/get}}

