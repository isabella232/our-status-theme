{{!< default}}

{{#post}}

<main id="main" role="main">
    {{#has tag="#dark-mode"}}
        <div class="dark-mode-toggle">
            Dark mode
            <a href="#"></a>
        </div>
    {{/has}}
    <article class="{{post_class}}">
        <div class="post-intro">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-9 col-md-12 ml-auto mr-auto">
                        <div class="inner">
                            <h1 class="post-title">{{title}}</h1>
                            <div class="post-meta">
                                <ul class="authors">
                                    {{#foreach authors}}
                                        <li>
                                            {{#if profile_image}}
                                                <a href="{{url}}" data-toggle="tooltip" data-placement="top" title="{{name}}">
                                                    <img src="{{img_url profile_image}}" alt="{{name}}" />
                                                </a>
                                            {{else}}
                                                <a href="{{url}}">
                                                    {{name}} 
                                                </a>
                                            {{/if}}
                                        </li>
                                    {{/foreach}}
                                </ul>
                                {{#if primary_tag}}
                                    <div class="tags">on {{tags limit="1"}}</div>
                                {{/if}}
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                            </div>
                            {{#if feature_image}}
                                <img src="{{img_url feature_image size="l"}}" class="inner-featured-image" alt="{{title}}">
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
